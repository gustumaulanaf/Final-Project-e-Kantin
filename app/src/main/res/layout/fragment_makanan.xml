<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.finalproject.e_kantin.MakananFragment">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nasgor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-80dp"
            android:layout_marginTop="-80dp"
            android:src="@drawable/nasgor" />

        <TextView
            android:id="@+id/namanasgor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/putih"
            android:text="Nasi Goreng Pak Tono"
            android:textColor="@color/hitam" />

        <Button
            android:id="@+id/tbnasgor"
            android:layout_width="@dimen/lebar_dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/putih"
            android:background="@color/colorPrimary"
            android:text="Pesan Sekarang" />
    </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/miayam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginTop="-120dp"
                    android:src="@drawable/mieayam" />

                <TextView
                    android:id="@+id/namamiayam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Mie Ayam Bu Harni"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbmiayam"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ayamgeprek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginTop="-100dp"
                    android:src="@drawable/ayamgeprek" />

                <TextView
                    android:id="@+id/namageprek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Ayam Geprek Bu Haji"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbgeprek"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginTop="-100dp"
                    android:src="@drawable/gado" />

                <TextView
                    android:id="@+id/namagado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Gado-Gado Bu Riski"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbgado"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
