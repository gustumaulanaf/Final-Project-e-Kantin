<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.finalproject.e_kantin.MainActivity"
    tools:showIn="@layout/app_bar_main">

   <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="fill_parent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/putih"
        app:tabSelectedTextColor="@color/putih"
        app:tabIndicatorColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
       <android.support.design.widget.TabItem
           android:id="@+id/tb1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:icon="@drawable/mie"
           android:text="MAKANAN"/>
       <android.support.design.widget.TabItem
           android:id="@+id/tb2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:icon="@drawable/gelas"
           android:text="MINUMAN"/>
       <android.support.design.widget.TabItem
           android:id="@+id/tb3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:icon="@drawable/salad"
           android:text="MENU SEHAT"/>
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
